@model NotificationWebsite.Models.User
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="ErrorAlert" class="alert alertError poppins-extralight" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <div id="sign-up-win" class="main-win">
        <h3 class="h-sign-up poppins-semibold">Enter your details:</h3>
        <a class="close-btn" asp-controller="Home" asp-action="Index">Ã—</a>

        <form method="post" class="auth-form-sign-up">
            <span asp-validation-for="Username" class="poppins-bold-italic white-text"></span>
            <span asp-validation-for="Email" class="poppins-bold-italic white-text"></span>
            <span asp-validation-for="Password" class="poppins-bold-italic white-text"></span>
            <!--<div asp-validation-summary="All" class="poppins-bold-italic"></div>-->
            <input asp-for="Email" id="signUp_Email" name="email" class="input-field poppins-bold-italic Email-img"
                type="text" placeholder="Enter email:" oninput="changeStateSignUpBtn()" autocomplete="off">

            <input asp-for="Username" id="signUp_username" name="username"
                class="input-field poppins-bold-italic user-img" type="text" placeholder="Enter username:"
                oninput="changeStateSignUpBtn()" autocomplete="off">
            <input asp-for="Password" id="signUp_password" name="password"
                class="input-field poppins-bold-italic password-img" type="password" placeholder="Enter password:"
                oninput="changeStateSignUpBtn()" autocomplete="off">

            <button type="submit" id="signUpBtn" class="auth-btn auth-btn-sign-up poppins-semibold">Sign up</button>
            <script>
                document.getElementById('signUpBtn').disabled = true; //make the btn disabled when opening or refreshing the page
            </script>
        </form>

    </div>
    </div>
</body>

</html>
